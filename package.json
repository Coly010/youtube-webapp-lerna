{
  "name": "root",
  "private": true,
  "packageManager": "npm@8.5.3",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "devDependencies": {
    "cross-port-killer": "1.4.0",
    "lerna": "4.0.0",
    "minimist": "1.2.5",
    "rimraf": "3.0.2",
    "turbo": "1.1.4"
  },
  "scripts": {
    "build": "turbo run build",
    "serve": "turbo run serve --no-cache --continue",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rimraf node_modules --continue"
  }
}
