{
  "name": "root",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "cross-port-killer": "1.4.0",
    "lerna": "4.0.0",
    "minimist": "1.2.5",
    "rimraf": "3.0.2",
    "turbo": "1.1.4"
  },
  "scripts": {
    "build": "turbo run build",
    "serve": "turbo run serve  --no-cache --parallel --continue",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "bootstrap": "turbo run bootstrap",
    "clean": "turbo run clean && rimraf('node_modules')"
  }
}
